@{
    ViewData["Title"] = "Index";
}
@using MultiShop.Models
@model IEnumerable<Color>

<div class="container">
    <div class="card">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td><a class="btn btn-danger" asp-area="Manage" asp-controller="Color" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            <td><a class="btn btn-info" asp-area="Manage" asp-controller="Color" asp-action="Update" asp-route-id="@item.Id">Update</a></td>

                            <td><label class="badge badge-danger">Pending</label></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
